{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

<div class="w-full max-w-lg">
    <div class="flex flex-wrap -mx-3 mb-6">
    </div>
</div>
{{ form_errors(registrationForm) }}

{{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email, {
        label_attr: {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}
    }) }}
    {{ form_row(registrationForm.pseudo, {
        label_attr: {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de Passe'
    }) }}
    {{ form_row(registrationForm.rgpd) }}

    <button type="submit" class="btn">S'inscrire</button>
    <p>Déjà inscrit(e) ?<a href="{{ path('app_login')}}"> Me connecter</a></p>
{{ form_end(registrationForm) }}

{% endblock %}