    <body>
        {% include 'header.html.twig' %}
        {% if app.user and app.user.isVerified == false %}
        <div class="alert alert--warning alert-dismissable" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" 
            aria-label="Close"></button>
            <div class="alert-message">
                <strong>Bonjour, {{app.user.pseudo}}</strong>, <br> votre compte n'est pas encore activé. <br> Un lien d'activation vous a été envoyé par mail.<br>
                <a class="flashy__body" href="{{path('resend_verif')}}" target="_blank">Pas de lien ? <strong>Renvoyez le lien d'activation.</strong></a>
            </div>
        </div>
        {% endif %}
        {% include '_partials/_flash.html.twig' %}
